<!DOCTYPE html>
%html
	%head
		
		%title Château de Missery
		%script{:src => "https://use.fontawesome.com/6ee47c5b0b.js"}
		%meta{:name => "viewport", :content=> "width=device-width, initial-scale=1.0"}
		%link{:rel => "canonical", :href => "http://chateaudemissery"}
		= csrf_meta_tags
		= stylesheet_link_tag "application", media: "all", "data-turbolinks-track"=> "reload"
		= javascript_include_tag "application", "data-turbolinks-track" => "reload"

	%body
		#flex-content-container
			%nav.navbar.navbar-toggleable-md.navbar-light.bg-faded.booyah-box.navbar-style
				%button.navbar-toggler.navbar-toggler-right{"type" => "button", "data-toggle" => "collapse", "data-target" => "#navbarNav", "aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle"}
					%span.navbar-toggler-icon
				%a
					%h1.title-name
						=link_to "Château de Missery", root_path
				.collapse.navbar-collapse{"id" => "navbarNav"}
					%ul.nav.navbar-nav.nl.auto.w-100.justify-content-end
						%ul.navbar-nav
							%div#test
							%li.nav-item
								= link_to "Burgundy", "/burgundy"
							%li.nav-item
								= link_to "Wine & Cuisine", "/wine-cuisine "
							%li.nav-item
								= link_to "Activities", "/activities"
							%li.nav-item
								= link_to "Rooms", "/rooms"
							%li.nav-item
								= link_to "Gallery", "/gallery"
						%a.dropdown-toggle{"data-toggle" => "dropdown", "href" => "#","aria-haspopup" => "true", "aria-expanded" => "false"} More
						%span.caret
						.dropdown-menu.dropdown-menu-right.dropdown-color
							%a.dropdown-item								
								= link_to "Location", "/location"
							%a.dropdown-item								
								= link_to "Press", "/press"
							%a.dropdown-item
								= link_to "Booking", "/booking"
			= yield
		#footer
			%p.text-muted.copyright
				Missery, Burgundy, France
				| &copy 2019 | chateaudemissery.com | All Rights Reserved
		:javascript
			jQuery(document).ready(function() {
				var offset = 220;
				var duration = 500;
				jQuery(window).scroll(function() {
					if (jQuery(this).scrollTop() > offset) {
						jQuery('.crunchify-top').fadeIn(duration);
					} else {
						jQuery('.crunchify-top').fadeOut(duration);
					}
				});
		 
				jQuery('.crunchify-top').click(function(event) {
					event.preventDefault();
					jQuery('html, body').animate({scrollTop: 0}, duration);
					return false;
					})
				});