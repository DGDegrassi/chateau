<!DOCTYPE html>
%html
	%head
		
		%title Château de Missery
		%meta{:name => "viewport", :content=> "width=device-width, initial-scale=1.0"}
		= csrf_meta_tags
		= stylesheet_link_tag "application", media: "all", "data-turbolinks-track"=> "reload"
		= javascript_include_tag "application", "data-turbolinks-track" => "reload"
	%body
		#flex-content-container
			%nav.navbar.navbar-toggleable-md.navbar-light.bg-faded.booyah-box.navbar-style
				%button.navbar-toggler.navbar-toggler-right{"type" => "button", "data-toggle" => "collapse", "data-target" => "#navbarNav", "aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle"}
					%span.navbar-toggler-icon
				%a
					%h1.title-name
						=link_to "Château de Missery", root_path
				.collapse.navbar-collapse{"id" => "navbarNav"}
					= render 'default/shared/navigation'
			= yield
		#footer.footer-right
			%p.text-muted.copyright
				&copy 2017 | chateaudemissery.com | All Rights Reserved
		:javascript
			jQuery(document).ready(function() {
			var offset = 220;
			var duration = 500;
			jQuery(window).scroll(function() {
				if (jQuery(this).scrollTop() > offset) {
					jQuery('.crunchify-top').fadeIn(duration);
				} else {
					jQuery('.crunchify-top').fadeOut(duration);
				}
			});
	 
			jQuery('.crunchify-top').click(function(event) {
				event.preventDefault();
				jQuery('html, body').animate({scrollTop: 0}, duration);
				return false;
				})
			});

