.booyah-box
	%article
		.container-fluid
			.row
				%img{:class => "top-pictures", :src => @page.content(:photo).file_url}
		%article
			.price-button
				%a.btn.btn-primary{"role" => "button", "href" => "/booking"} Book Now!
			.page-title
				%h1
					= @page.title
				= @page.content(:intro).try(:html_safe)
			.open-content
				.text-content
					= @page.content(:text).try(:html_safe)
				.container.text-right.text-muted.social-text
					= link_to image_tag("icon.png", :class => "social-icon"), 'https://www.instagram.com/chateaudemissery/', :target => "_blank"
					= link_to image_tag("twitter-logo.png", :class => "social-icon"), "https://twitter.com/chateaumissery"
				.text-center.explore-text
					Continue exploring:
		.container
			.row
				.col-sm-4
					= link_to image_tag(@page.content(:photolink1).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto1))
					.caption
						= @page.content(:textforphoto1).try(:html_safe)
				.col-sm-4
					= link_to image_tag(@page.content(:photolink2).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto2))
					.caption
						= @page.content(:textforphoto2).try(:html_safe)
				.col-sm-4
					= link_to image_tag(@page.content(:photolink3).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto3))
					.caption
						= @page.content(:textforphoto3).try(:html_safe)
		.text-center.marg-top-3
			%a.crunchify-top{"href" =>"#"} Back to top
		%br