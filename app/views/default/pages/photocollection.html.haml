.booyah-box

	%article
		.price-button-stick-right
			%a.btn.btn-primary{"role" => "button", "href" => "/booking"} Find out more
		.page-title
			%h1= @page.title
			%br/
			= @page.content(:intro).try(:html_safe)	
		%br
			.carousel-div
				.col-sm-8.offset-sm-2
					#carouselExampleControls.carousel.slide{"data-ride" => "carousel", "data-interval" => "3500"}
						.carousel-inner{"role" => "listbox"}
							.carousel-item.active
								%a.center-carousel{"href" => 'cover.jpg', :target => "_blank"}
									= image_tag 'cover.jpg', :class => "d-block img-fluid carousel-img"
							- @page.content(:photo_collection).photos.each do |photo|
								.carousel-item
									%a.center-carousel{"href" => photo.file_url, :target => "_blank"}
										%img{:class => "d-block img-fluid carousel-img", :src => photo.file_url}
							%a.carousel-control-prev{:href => "#carouselExampleControls", "role" => "button", "data-slide" => "prev"}
								%span.fa.fa-chevron-left{"aria-hidden" => "true"}
								%span.sr-only Previous
							%a.carousel-control-next{"href" => "#carouselExampleControls", "role" => "button", "data-slide" => "next"}
								%span.fa.fa-chevron-right{"aria-hidden" => "true"}
								%span.sr-only Next
			%br
			%br
			.container
				%span
					%a.btn.btn-primary.price-button-bottom{"role" => "button", "href" => "/booking"} Find out more
			.container.text-right.text-muted.social-text
				#thank-you.text-center Thanks for subscribing!
				= simple_form_for('subscribe', url: '/emailapi/subscribe', method: "post", id: "subscribe", multipart: true, remote: true,class: "addSub") do |f|
					= f.input :first_name, label: false, placeholder: "First name", input_html: { required: true }
					= f.input :last_name, label: false, placeholder: "Last name", input_html: { required: true }
					= f.input :email, label: false, placeholder: "Email", input_html: { required: true }
					= f.submit "Sign up for the Newsletter!", class: "subButton btn btn-primary"
				= link_to image_tag("icon.png", :class => "social-icon"), 'https://www.instagram.com/chateaudemissery/', :target => "_blank"
				= link_to image_tag("Facebook_logo_(square).png", :class => "social-icon"), "https://www.facebook.com/ChateaudeMissery/"

			.text-center.explore-text
				Continue exploring:
			.container
				.row
					.col-sm-4
						= link_to image_tag(@page.content(:photolink1).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto1))
						.caption
							= @page.content(:textforphoto1).try(:html_safe)
					.col-sm-4
						= link_to image_tag(@page.content(:photolink2).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto2))
						.caption
							= @page.content(:textforphoto2).try(:html_safe)
					.col-sm-4
						= link_to image_tag(@page.content(:photolink3).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto2))
						.caption
							= @page.content(:textforphoto3).try(:html_safe)
				.text-center.marg-top-3
					%a.crunchify-top{"href" =>"#"} Back to top
				%br