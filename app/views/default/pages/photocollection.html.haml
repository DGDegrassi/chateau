.booyah-box

	%article
		.price-button
			%a.btn.btn-primary{"role" => "button", "href" => "/booking"} Inquire Prices & Availability
		.page-title
			%h1= @page.title
			%br/
			= @page.content(:intro).try(:html_safe)	
		%br
			.col-sm-8.offset-sm-2
				#carouselExampleControls.carousel.slide{"data-ride" => "carousel"}
					.carousel-inner{"role" => "listbox"}
						.carousel-item.active
							%a.center-carousel{"href" => 'cover.jpg', :target => "_blank"}
								= image_tag 'cover.jpg', :class => "d-block img-fluid carousel-img"
						- @page.content(:photo_collection).photos.each do |photo|
							.carousel-item.active
								%a.center-carousel{"href" => photo.file_url, :target => "_blank"}
									%img{:class => "d-block img-fluid carousel-img", :src => photo.file_url}
						%a.carousel-control-prev{:href => "#carouselExampleControls", "role" => "button", "data-slide" => "prev"}
							%span.carousel-control-prev-icon{"aria-hidden" => "true"}
							%span.sr-only Previous
						%a.carousel-control-next{"href" => "#carouselExampleControls", "role" => "button", "data-slide" => "next"}
							%span.carousel-control-next-icon{"aria-hidden" => "true"}
							%span.sr-only Next
			%br
			.container.text-right.text-muted.social-text
				Share this Page:
				= link_to image_tag("facebook.png", :class => "social-icon"), 'http://www.facebook.com/sharer.php?u='+request.original_url, :target => "_blank"

				= link_to image_tag("twitter_logo.png", :class => "social-icon"), "https://twitter.com/share?url="+request.original_url, :target => "_blank"
				= link_to image_tag("mail.png", :class => "social-icon"), "mailto:?Subject=ChÃ¢teau de Missery&body=I%20saw%20this%20and%20thought%20of%20you!%20"+request.original_url
			.text-center.explore-text
				Continue exploring:
			.container
				.row
					.col-sm-4
						= link_to image_tag(@page.content(:photolink1).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto1))
						.caption
							= @page.content(:textforphoto1).try(:html_safe)
					.col-sm-4
						= link_to image_tag(@page.content(:photolink2).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto2))
						.caption
							= @page.content(:textforphoto2).try(:html_safe)
					.col-sm-4
						= link_to image_tag(@page.content(:photolink3).try(:file_url), :class => "uploaded-pictures"), get_url(@page.content(:textforphoto2))
						.caption
							= @page.content(:textforphoto3).try(:html_safe)
