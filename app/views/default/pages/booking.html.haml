.booyah-box
	%article
		.container-fluid
			.row
				%img{:class => "top-pictures", :src => @page.content(:photo).file_url}
		%article
		.booking-container
			.page-title
				%h1
					= @page.title
				= @page.content(:intro).try(:html_safe)
			.contact-button-center
				%a.btn.btn-primary{"role" => "button", "href" => "mailto:hello@chateaudemissery.com"} Get in touch!
			.open-content
				.text-content-booking
					= @page.content(:text).try(:html_safe)
				%em.sign-off
					= @page.content(:text2).try(:html_safe)
			.container
				.container.text-right.text-muted.social-text
					#thank-you.text-center Thanks for subscribing!
					= simple_form_for('subscribe', url: '/emailapi/subscribe', method: "post", id: "subscribe", multipart: true, remote: true,class: "addSub") do |f|
						= f.input :first_name, label: false, placeholder: "First name", input_html: { required: true }
						= f.input :last_name, label: false, placeholder: "Last name", input_html: { required: true }
						= f.input :email, label: false, placeholder: "Email", input_html: { required: true }
						= f.submit "Sign up for the Newsletter!", class: "subButton"
					= link_to image_tag("icon.png", :class => "social-icon"), 'https://www.instagram.com/chateaudemissery/', :target => "_blank"
					= link_to image_tag("Facebook_logo_(square).png", :class => "social-icon"), "https://www.facebook.com/ChateaudeMissery/"
		%br